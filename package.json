{
	"name": "coq-prelude",
	"version": "1.0",
	"description": "A convenient addition to the Coq standard library in order to ease software development (as opposed to theorem proving).",
	"license": "GPLv3",
	"esy": {
		"buildsInSource": "_build",
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/"
		},
		"build": "make",
		"install": "dune install --prefix=#{self.install}"
	},
	"scripts": {
		"html": "make html",
		"clean": "make clean"
	},
	"dependencies": {
		"@opam/coq": "8.10.1",
		"@opam/dune": "^2.4",
		"coq-equations": "*"
	},
	"resolutions": {
		"coq-equations": {
			"source": "github:mattam82/Coq-Equations#cede6e3526991667c11f86ab23dc6d85efc9dea1",
			"override": {
        "dependencies": {
          "@opam/coq": "~8.10"
        },
        "buildsInSource": true,
        "buildEnv": {
          "HOME": "#{self.target_dir}",
          "COQBIN": "#{@opam/coq.bin}/",
          "COQLIB": "#{@opam/coq.lib}/coq/",
          "COQPATH": "#{@opam/coq.lib}/coq/user-contrib/"
        },
        "build": [
          ["./configure.sh"],
          ["make", "-j2"],
          ["make", "install"]
        ]
      }
    }
	}
}
